<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frindr.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login pagina"/>
            <Label x:Name="lblShowUsername"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="lblOne" VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"/>
            <Label x:Name="lblTwo"/>
            <Entry x:Name="txtUsername"/>
            <Entry x:Name="txtPassword" IsPassword="True"/>
            <Button x:Name="btnConfirm" Clicked="btnConfirm_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>