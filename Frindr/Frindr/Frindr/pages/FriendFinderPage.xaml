<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frindr.FriendFinderPage"
             Title="Vrienden zoeker">

    <StackLayout>
        <Frame>
            <StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                    <Picker HorizontalOptions="StartAndExpand" x:Name="DistancePicker"></Picker>
                    <Button HorizontalOptions="End" Text="Show" x:Name="ShowFilterButton" Clicked="ShowFilterButton_Clicked"></Button>
                </StackLayout>

                <StackLayout HorizontalOptions="Start" Orientation="Horizontal" IsVisible="False" x:Name="ExtraFilterStackLayout">
                    
                    <Picker x:Name="AgePicker"></Picker>
                </StackLayout>
            </StackLayout>
        </Frame>

        <ScrollView>
                
        </ScrollView>
            
    </StackLayout>

</ContentPage>