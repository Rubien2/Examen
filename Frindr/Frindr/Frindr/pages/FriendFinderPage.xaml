<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frindr.FriendFinderPage"
             Title="Vrienden zoeker">

    <StackLayout>
        
        <StackLayout Orientation="Horizontal">
                <Button Text="Extend" x:Name="ShowFilterButton"></Button>
                <Label VerticalTextAlignment="Center" Text="Selecteer een maximus afstand:"></Label>
                <Picker x:Name="DistancePicker"></Picker>
            </StackLayout>
            <StackLayout Orientation="Horizontal" IsVisible="False" x:Name="ExtraFilterStackLayout">
                <Label Text="Selecteer een leeftijds categorie:"></Label>
                <Picker x:Name="AgePicker"></Picker>
            </StackLayout>

            <ScrollView>
                
            </ScrollView>
            
        </StackLayout>

</ContentPage>