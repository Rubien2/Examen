<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frindr.PersonalRegisterPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">
            <Label Text="FRINDR" FontSize="75" HorizontalOptions="CenterAndExpand" Margin="25"></Label>
            <Entry Placeholder="Naam" x:Name="NameEntry"/>
            <Entry Placeholder="Postcode" x:Name="LocationEntry"/>

            <StackLayout Orientation="Horizontal">
                <Label Text="Geboortedatum:" VerticalTextAlignment="Center"></Label>
                <DatePicker x:Name="BirthdayPicker" HorizontalOptions="FillAndExpand"/>
            </StackLayout>

            <Button Text="Volgende" x:Name="NextButton" Margin="0,25,0,0" Clicked="NextButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>