<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frindr.FirstRegisterPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="StartAndExpand">
                <Label Text="FRINDR" FontSize="75" HorizontalOptions="CenterAndExpand" Margin="25"></Label>

                <StackLayout VerticalOptions="StartAndExpand">
                    <Entry Placeholder="E-mail" x:Name="EmailEntry"/>
                    <Entry Placeholder="Wachtwoord" x:Name="PasswordEntry" IsPassword="True"/>
                    <Entry Placeholder="Bevestig wachtwoord" x:Name="ConfirmPasswordEntry" IsPassword="True"/>
            </StackLayout>

                <StackLayout Margin="0,25,0,0">
                    <Button Text="Volgende" x:Name="NextButton" Clicked="NextButton_Clicked"/>
                    <Button Text="Ik heb al een account" x:Name="GoToLoginButton" Clicked="GoToLoginButton_Clicked"/>
                </StackLayout>

            </StackLayout>
    </ContentPage.Content>
</ContentPage>