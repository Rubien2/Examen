<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frindr.OtherProfilePage">
    <ContentPage.Content>
        <StackLayout Margin="10">

            <StackLayout Orientation="Horizontal">
                <Image x:Name="imgProfileImage" Source="" Aspect="AspectFill" HeightRequest="145" WidthRequest="145"/>

                <StackLayout>
                    <Label x:Name="lblProfileName" Text="[Account naam]"/>
                    <Label x:Name="lblEmail" Text="[Email]"/>
                    <Label x:Name="lblLocation" Text="[Locatie]"/>
                </StackLayout>
            </StackLayout>
            <StackLayout Margin="0,0,0,10" VerticalOptions="End">
                <Label Text="Beschrijving" FontSize="Large"/>
                <Label x:Name="lblDescription" Text="[Beschrijving]"/>
                <Label Text="Hobby's" FontSize="Large"/>
                <Label x:Name="lblHobbies" Text="[Hobby lijst]"/>
            </StackLayout>

            <Button x:Name="btnSendMessage" Text="Verstuur bericht" VerticalOptions="End" Clicked="btnSendMessage_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>