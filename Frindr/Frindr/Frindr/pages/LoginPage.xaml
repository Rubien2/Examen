<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frindr.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="FRINDR" FontSize="75" HorizontalOptions="CenterAndExpand" Margin="50"/>
            <StackLayout Margin="0, 50, 0, 0">
            <Entry Placeholder="Email" x:Name="NameEntry"/>
            <Entry Placeholder="Wachtwoord" x:Name="PasswordEntry" IsPassword="True"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button Text="Registreer" x:Name="RegisterButton" HorizontalOptions="CenterAndExpand" WidthRequest="150" Clicked="RegisterButton_Clicked"/>
                    <Button Text="Log-in" x:Name="LoginButton" HorizontalOptions="FillAndExpand" WidthRequest="150" Clicked="LoginButton_Clicked"/>
                    
                </StackLayout>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
            <Label Text="Onthoud mij"/>
            <Switch x:Name="RememberSwitch"/>
            <Button Text="Wachtwoord vergeten" x:Name="PWDResetButton" HorizontalOptions="Center" Clicked="PWDResetButton_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>